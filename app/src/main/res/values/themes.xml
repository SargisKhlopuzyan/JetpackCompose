        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MeditationUIYouTube.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MeditationUIYouTube.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
